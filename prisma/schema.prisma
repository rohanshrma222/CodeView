generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @default(uuid())  // Auto-generated UUID
  name    String
  email   String  @unique               // Ensuring uniqueness of emails
  image   String?                       // Optional field
  role    Role
  clerkId String  @unique               // Unique constraint on clerkId

  @@unique([clerkId], map: "custom_clerkId_unique") // Custom name for unique constraint
}

enum Role {
  candidate
  interviewer
}
